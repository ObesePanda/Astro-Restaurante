<section
  id="hero"
  class="relative h-screen flex items-center justify-center text-center overflow-hidden"
>
  <!-- Video de fondo -->
  <video
    
    class="absolute inset-0 w-full h-full object-cover"
    autoplay
    muted
    loop
    playsinline
  >
    <source src="/videos/fondo.mp4" type="video/mp4" />
    Tu navegador no soporta el video.
  </video>

  <!-- Capa oscura -->
  <div class="absolute inset-0 bg-neutral-800/50 z-0"></div>

  <!-- Contenido -->
  <div
    data-sal="zoom-out"
    data-sal-duration="800"
    data-sal-delay="200"
    class="relative z-10 px-4"
  >
    <h1 class="text-4xl md:text-6xl font-bold text-white drop-shadow-lg">
      Bienvenido a <span class="text-red-700 drop-shadow-lg">La Terraza</span>
    </h1>
    <p class="mt-4 text-lg md:text-xl text-white/90 max-w-xl mx-auto drop-shadow-lg">
      Restaurant & Drinks - Disfruta de una experiencia culinaria única con sabores que deleitan.
    </p>
    <a
      href="/menu"
      class="mt-6 inline-block bg-red-700 text-white px-6 py-3 rounded-full text-lg font-semibold hover:bg-accent transition-all"
    >
      Ver Menú
    </a>
  </div>
</section>
