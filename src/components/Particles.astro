---
// Components/Particles.astro
import type { Engine } from "tsparticles-engine";
import { loadSlim } from "tsparticles-slim";
---

<div id="particles-js" class="absolute inset-0 pointer-events-none z-[5]"></div>

<script is:inline>
  window.addEventListener("DOMContentLoaded", async () => {
    await loadSlim((await import("tsparticles-slim")).Engine).then(
      async (engine) => {
        await engine.load("particles-js", {
          background: {
            color: "transparent",
          },
          particles: {
            number: {
              value: 80,
              density: {
                enable: true,
                area: 800,
              },
            },
            color: {
              value: ["#FF4500", "#FFA500", "#FFD700"],
            },
            shape: {
              type: "circle",
            },
            opacity: {
              value: {
                min: 0.1,
                max: 0.5,
              },
              random: true,
            },
            size: {
              value: {
                min: 1,
                max: 3,
              },
              random: true,
            },
            move: {
              enable: true,
              speed: 1,
              direction: "top",
              straight: false,
              outModes: "out",
            },
            links: {
              enable: true,
              distance: 150,
              color: "#ffffff",
              opacity: 0.2,
              width: 1,
            },
          },
          interactivity: {
            events: {
              onHover: {
                enable: true,
                mode: "repulse",
              },
            },
          },
        });
      }
    );
  });
</script>
