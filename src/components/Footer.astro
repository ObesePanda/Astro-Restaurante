---
import { Facebook } from "@lucide/astro";
import { Instagram } from "@lucide/astro";
import { Phone } from "@lucide/astro";
---

<!-- src/components/Footer.astro -->
<footer class="bg-neutral-800 text-white px-6 py-10 text-sm">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Logo y descripción -->
    <div>
      <h2 class="text-2xl font-bold text-white">Mi Restaurante</h2>
      <p class="mt-4 text-white">
        Cocina con alma, servida con amor. Desde 2024 ofreciendo sabor
        auténtico.
      </p>
      <a
        href="/menu"
        class="mt-5 inline-block bg-gradient-to-r from-neutral-600 to-neutral-900 text-white p-4 rounded-full text-lg font-bold transition-all duration-300 transform hover:scale-105 shadow-lg shadow-red-900/30 hover:shadow-red-900/50"
      >
        <Facebook />
      </a>
      <a
        href="/menu"
        class="mt-5 inline-block bg-gradient-to-r from-neutral-600 to-neutral-900 text-white p-4 rounded-full text-lg font-bold transition-all duration-300 transform hover:scale-105 shadow-lg shadow-red-900/30 hover:shadow-red-900/50"
      >
        <Instagram />
      </a>
      <a
        href="/menu"
        class="mt-5 inline-block bg-gradient-to-r from-neutral-600 to-neutral-900 text-white p-4 rounded-full text-lg font-bold transition-all duration-300 transform hover:scale-105 shadow-lg shadow-red-900/30 hover:shadow-red-900/50"
      >
        <Phone />
      </a>
    </div>

    <!-- Navegación -->
    <div>
      <h3 class="text-lg font-semibold mb-2">Enlaces</h3>
      <ul class="space-y-2">
        <li>
          <a href="#hero" class="hover:text-primary transition">Inicio</a>
        </li>
        <li><a href="#menu" class="hover:text-primary transition">Menú</a></li>
        <li>
          <a href="#about" class="hover:text-primary transition"
            >Sobre Nosotros</a
          >
        </li>
        <li>
          <a href="#contact" class="hover:text-primary transition">Contacto</a>
        </li>
      </ul>
    </div>

    <!-- Información de contacto -->
    <div>
      <h3 class="text-lg font-semibold mb-2">Contacto</h3>
      <ul class="space-y-2 text-white">
        <li>📍 Calle Ficticia 123, Ciudad</li>
        <li>📞 +52 123 456 7890</li>
        <li>📧 hola@restaurante.com</li>
        <li class="flex space-x-4 mt-2">
          <a href="#" class="hover:text-primary transition"
            ><i class="fab fa-facebook"></i></a
          >
          <a href="#" class="hover:text-primary transition"
            ><i class="fab fa-instagram"></i></a
          >
          <a href="#" class="hover:text-primary transition"
            ><i class="fab fa-whatsapp"></i></a
          >
        </li>
      </ul>
    </div>
  </div>

  <div class="text-center mt-10 text-white text-xs">
    © 2025 Mr.Bolat Desarrollado por 🐼 PandaCode.
  </div>
</footer>
