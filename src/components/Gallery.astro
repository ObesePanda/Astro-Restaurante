---
const images = [
  "/images/gallery1.jpg",
  "/images/gallery2.jpg",
  "/images/gallery3.jpg",
  "/images/gallery4.jpg",
  "/images/gallery5.jpg",
  "/images/gallery6.jpg",
];
---

<section id="gallery" class="px-15 py-20 bg-[var(--color-bg)]">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-primary">Galería</h2>
    <p class="mt-2 text-lg text-text/70">
      Un vistazo a nuestros sabores y ambiente
    </p>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    {
      images.map((src) => (
        <div class="overflow-hidden rounded-xl shadow-lg hover:scale-105 transition-transform duration-300 cursor-pointer">
          <img
            src={src}
            alt="Galería de Restaurante"
            class="w-full h-48 object-cover"
            loading="lazy"
          />
        </div>
      ))
    }
  </div>
</section>
